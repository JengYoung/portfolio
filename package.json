{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "stylelint:fix": "stylelint --fix \"**/*.{tsx,ts}\"",
    "lint:all": "next lint && yarn stylelint \"**/*.tsx\"",
    "prettier:all": "prettier --write **/*.{tsx,ts,js,json,md,html} --ignore-unknown",
    "postinstall": "husky install",
    "export": "next build && next export"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recoil": "^0.7.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@next/eslint-plugin-next": "latest",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@svgr/webpack": "^6.5.1",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/node": "18.7.13",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/three": "^0.144.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "^5.42.0",
    "commitizen": "^4.2.5",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb": "latest",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.3.0",
  "lint-staged": {
    "*.{tsx,ts}": [
      "prettier --write --no-error-on-unmatched-pattern",
      "eslint --fix --ext (.ts|.tsx) --no-error-on-unmatched-pattern",
      "stylelint --fix",
      "git add"
    ]
  }
}
